<?import javafx.scene.text.*?>
<fx:root minWidth="100" prefWidth="360.0" type="AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" onMouseClicked="#onItemClicked">
    <stylesheets>
        <URL value="@global.css" />
    </stylesheets>
   <children>
   
       <ImageView fx:id="bookBorrowUserImgView" layoutY="10" fitHeight="80" fitWidth="80" pickOnBounds="true" preserveRatio="true" />
       <VBox layoutX="90" prefHeight="80.0" prefWidth="218.0">
           <children>
               <HBox alignment="BOTTOM_LEFT" prefHeight="30.0" prefWidth="218.0" spacing="15">
                   <children>
                       <Label fx:id="bookBorrowUserNameLabel" prefHeight="30.0" text="白云舒" wrapText="true"/>
                       <Label fx:id="bookBorrowUserScoreLabel" prefHeight="30.0" text="100分" wrapText="true"/>
                       <Label fx:id="bookBorrowUserTimeLabel" prefHeight="30.0" text="2018.10.3" wrapText="true"/>
                   </children>
               </HBox>
               <Label fx:id="bookBorrowUserComLabel" prefHeight="50.0" prefWidth="218.0" text="希望你也能喜欢这本书" wrapText="true"/>
           </children>
       </VBox>
       <Label fx:id="bookBorrowIsOk" alignment="CENTER" layoutX="303.0" prefHeight="80.0" prefWidth="57.0" text="可借" />
   </children>

</fx:root>
